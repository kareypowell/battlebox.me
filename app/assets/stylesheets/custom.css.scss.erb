@import "bootstrap";

/*colours used*/
$orangeColour: #fc8b35;
$navigationBg: #2a2a2a;
$bodyBackground: #832604;


@mixin box_sizing {
	-moz-box-sizing: border-box;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
}

/* universal */

html {
  overflow-y: scroll;
}

body {
  padding-top: 60px;
}

section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

.center {
  text-align: center;
  h1 {
	  margin-bottom: 10px;
	}
}

form input[type="text"], 
form input[type="email"], 
form input[type="password"] {
	height: 28px;
	font-size: 16px;
}

.placeholder {
  color: #aaa;
}

/* custom navigation */
#top-strip {
	height: 3px;
	width: 100%;
	background: $orangeColour;
}

.bb-navbar {
	background: $navigationBg;
	height: 63px;
	width: 100%;
	/*-webkit-box-shadow: 0 10px 6px -5px #c2c2c2;
	-moz-box-shadow: 0 10px 6px -5px #c2c2c2;
	box-shadow: 0 10px 6px -5px #c2c2c2;*/
}

.custom-navbar ul li {
	float: left;
	list-style: none;
	margin: 10px 45px 0 35px;
	a {
		text-transform: uppercase;
		text-decoration: none;
		color: #fff;
		font-weight: bold;
		font-size: 13px;
		font-family: "Arial black";
		&:hover {
			color: $orangeColour;
		}
	}
	&.nav-line {
		list-style: none;
		background: url(<%= asset_path "nav-line.png" %>) no-repeat;
		height: 38px;
		width: 52px;
		padding: 21px 20px 0 50px;
		margin: -10px;
		&:nth-child(1) {
			margin-left: 0;
		}
		&:nth-child(3) {
			margin-left: -25px;
		}
		&:nth-child(4) {
			margin-left: 10px;
		}
		&:nth-child(5) {
			margin-left: -5px;
		}
		&:nth-child(6) {
			margin-left: 45px;
		}
	}
}

ul.nav-right {
	float: right;
	li {
		width: 86px;
		height: 38px;
		background: url(<%= asset_path "sign-up-hover.png" %>) no-repeat;
		margin: 0;
		padding: 10px 0 0 15px;
		a {
			text-transform: none;
			font-family: "Arial";
		}
	}
}

/* main content */
#header-promo {
	float: left;
	color: #fff;
	clear: both;
	background: $bodyBackground url(<%= asset_path "standoff-bg.jpg" %>) no-repeat;
	height: 580px;
	width: 100%;
	padding-top: 60px;
}

#slider {
	float: left;
	background: url(<%= asset_path "s3-phone-for-app.png" %>) no-repeat;
	width: 266px;
	height: 571px;
	text-align: center;
	.coming_soon {
		margin-top: 180px;
		color: #bababa;
		font-weight: bold;
		font-size: 18px;
		font-family: "Arial";
		text-transform: uppercase;
	}
}

#logo {
	padding: 20px 0 15px 0;
}

#promo-text {
	line-height: 22px;
	margin-left: 50px;
}

#quick-signup {
	padding: 15px 0 25px 0;
	text-align: center;
}

#signup_form {
	float: right;
	padding: 0 0 0 10px;
	border: 1px solid #fff;
}

/* footer */
footer {
	clear: both;
	padding: 35px 0 35px 0;
	ul li {
		list-style: none;
		line-height: 28px;
		margin-left: -25px;
		a {
			color: #000;
			&:hover {
				color: $orangeColour;
				text-decoration: none;
			}
		}
	}
}

.copyright {
	float: left;
	margin-top: 35px;
	width: 100%;
	text-align: center;
}

/* Miscellaneous*/
.debug_dump {
	clear: both;
	float: left;
	width: 100%;
	margin-top: 45px;
	@include box_sizing;
}

#error-explanation {
	color: #f00;
	ul {
		list-style: none;
		margin: 0 0 18px 0;
	}
}

/*.field_with_errors {
